{
	"compilerOptions": {
		"strict": true,
		"noEmit": true,
		"allowJs": true,
		"target": "ESNext",
		"module": "ESNext",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"lib": ["ESNext", "DOM", "DOM.Iterable"]
	},
	"include": [
		"src/**/*.vue",
		"src/**/*.ts",
		"src/**/*.d.ts"
	]
}
